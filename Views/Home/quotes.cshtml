@using quoting_dojo.Models
@model Quote

<html>
    <head>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<style>
    h1 {
        text-align: center;
        margin: 20px;
    }
    h6 {
        margin-left: 40px;
    }
    h5 {
        margin-top: 10px;
    }
    .container {
        width: 900px;
        height: 500px;
    }

</style>
    </head>
<body>
    <h1>Here are the awesome quotes!</h1>

    <div class="container">
        @for(int i = @ViewBag.Allquotes.Count-1; i > 0; i--)
            {
                <h5>"@ViewBag.AllQuotes[i]["quote"]"</h5>
                <h6>@ViewBag.AllQuotes[i]["user"] - @ViewBag.AllQuotes[i]["created_at"]</h6>
                <hr>
            }
    </div>
    <h4><a href="/">Go Back</a></h4>
</body>
</html>